<UserControl x:Class="WpfOcrInvoiceExtractor.ImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfOcrInvoiceExtractor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="imageGrid" Background="Black">
        <Border ClipToBounds="True">
            <Canvas x:Name="imageCanvas">
                <Image x:Name="invoice" RenderOptions.BitmapScalingMode="HighQuality" Cursor="ScrollAll"></Image>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
