<Window x:Class="WpfOcrInvoiceExtractor.InvoiceTemplateViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:uc="clr-namespace:WpfOcrInvoiceExtractor"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOcrInvoiceExtractor"
        mc:Ignorable="d"
        Title="InvoiceTemplateViewer">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Click="Continue_Button_Click">Continue</Button>
            <Button Click="EraseAll_Button_Click">Erase all regions</Button>
        </StackPanel>
        <uc:ImageEditor x:Name="ImageEditorControl" Grid.Row="1" ScalingMode="Vertical" Drawable="True"></uc:ImageEditor>
    </Grid>
</Window>
